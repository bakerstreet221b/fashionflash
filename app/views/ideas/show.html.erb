<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @idea.name %>
</p>

<p>
  <b>Description:</b>
  <%= @idea.description %>
</p>

<p>
	<% if @idea.picture.present? %>		
  <b>Picture:</b>
  <%= image_tag(@idea.picture_url, :width => "100%")  %>
  <% end %>
</p>

<% if can? :update, @idea %>
<%= link_to 'Edit', edit_idea_path(@idea) %> |
<% end %>
<%= link_to 'Back', ideas_path %>
